@model BTL_Zoo.Entities.DongVat

@{
    
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thêm mới động vật";
}
@section jsFooter
{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault()
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImages').val(url);
            };
            finder.popup();
        })
        var editor = CKEDITOR.replace('txtContent', {
            customConfig: '/Content/Admin/js/plugins/ckeditor/config.js',
        });
    </script>
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm động vật</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin động vật
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label>Tên Động Vật</label>
                                <div >
                                    @Html.EditorFor(model => model.TenDV,new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TenDV, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Hình ảnh</label>
                                <div>
                                    @Html.TextBoxFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" }, id = "txtImages" })
                                    <a href="#" id="btnSelectImage">Chọn ảnh</a>
                                    @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                                </div>
                                
                            </div>
                            <div class="form-group">
                                <label>Tên Khoa Học</label>
                                <div >
                                    @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Họ</label>
                                <div >
                                    @Html.EditorFor(model => model.Ho, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Ho, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Bộ</label>
                                <div >
                                    @Html.EditorFor(model => model.Bo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Bo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Nguồn gốc</label>
                                <div >
                                    @Html.EditorFor(model => model.NguonGoc, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NguonGoc, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Thức ăn</label>
                                <div>
                                    @Html.EditorFor(model => model.ThucAn, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ThucAn, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Chiều cao</label>
                                <div >
                                    @Html.EditorFor(model => model.ChieuCao, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ChieuCao, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Cân nặng</label>
                                <div >
                                    @Html.EditorFor(model => model.CanNang, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CanNang)
                                </div>
                            </div>
                             <div class="form-group">
                                <label>Nơi sinh sống</label>
                                 <div >
                                     @Html.EditorFor(model => model.NoiSinhSong, new { htmlAttributes = new { @class = "form-control" } })
                                     @Html.ValidationMessageFor(model => model.NoiSinhSong, "", new { @class = "text-danger" })
                                 </div>
                            </div>
                            <div class="form-group">
                                <label>Giới Thiệu</label>
                                @Html.TextAreaFor(model => model.GioiThieu, new { htmlAttributes = new { @class = "form-control" }, id = "txtContent" })
                                @Html.ValidationMessageFor(model => model.GioiThieu, "", new { @class = "text-danger" })
                            </div>
                            
                            <button type="submit" class="btn btn-default">Lưu lại</button>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
