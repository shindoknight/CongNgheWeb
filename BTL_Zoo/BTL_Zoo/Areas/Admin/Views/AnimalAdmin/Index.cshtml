@model PagedList.IPagedList<BTL_Zoo.Entities.DongVat>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách động vật</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách tài khoản
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Thao tác</th>
                                <th>Hình ảnh</th>
                                <th>Tên động vật</th>
                                <th>Tên Khoa học</th>
                                <th>Chiều cao</th>
                                <th>Cân nặng</th>

                            </tr>
                        </thead>
                        <tbody>
                                                        @foreach (var item in Model)
                            {
                                <tr id ="row_@item.MaDV">
<td >
                                        <a href="/Admin/EventAdmin/Edit/?id=@item.MaDV">Sửa|</a>
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaDV }, new AjaxOptions
                               {
                                   Confirm = "Bạn có chắc chắn muốn xóa sự kiện" + item.TenDV,
                                   OnComplete = "$('#row_" + @item.MaDV + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                    </td>
                                    <td><img src="@item.HinhAnh" alt="" width=60 height=60 /></td>
                                    <td>@item.TenDV</td>
                                    <td>@item.TenKH</td>
                                    <td>@item.ChieuCao</td>
                                    <td>@item.CanNang</td>

                                </trid>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <a href="/Admin/AnimalAdmin/Create">Thêm động vật mới</a>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>

