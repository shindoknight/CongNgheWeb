@model BTL_Zoo.Entities.SuKien

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter
{
<script>
    $('#btnSelectImage').on('click', function (e) {
        e.preventDefault()
    var finder=new CKFinder();
    finder.selectActionFunction=function(url){
        $('#txtImages').val(url );    
    };
    finder.popup();
    })
    </script>
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Thêm tài khoản đăng nhập</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin tài khoản
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label>Tiêu đề</label><br/>
                                @Html.EditorFor(model => model.TieuDe)
                                @Html.ValidationMessageFor(model => model.TieuDe)
                            </div>
                            <div class="form-group">
                                <label>Hình ảnh</label><br/>
                                @Html.TextBoxFor(model => model.HinhAnh,new{ htmlAttributes = new { @class = "form-control",  },id="txtImages"})
                                <a href="#" id="btnSelectImage">Chọn ảnh</a>
                                @Html.ValidationMessageFor(model => model.HinhAnh)
                            </div>
                            <div class="form-group">
                                <label>Tóm tắt</label><br/>
                                @Html.EditorFor(model => model.TieuDe)
                                @Html.ValidationMessageFor(model => model.TieuDe)
                            </div>
                            <div class="form-group">
                                <label>Nội dung</label><br /> 
                                @Html.EditorFor(model => model.NoiDung)
                                @Html.ValidationMessageFor(model => model.NoiDung)
                            </div>
                           
                            <button type="submit" class="btn btn-default">Lưu lại</button>
                            <button type="reset" class="btn btn-default">Nhập lại</button>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
