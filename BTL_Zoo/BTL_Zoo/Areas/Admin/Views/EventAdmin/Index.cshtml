@model PagedList.IPagedList<BTL_Zoo.Entities.SuKien>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sự kiện</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách tài khoản
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Thao tác</th>
                                <th>Hình ảnh</th>
                                <th>Tiêu đề</th>
                                <th>Thời gian</th>
                                <th>Tóm tắt</th>
                                <th>Nội dung</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a>Sửa|</a><a>|Xóa</a></td>
                                    <td><img src="~/Content/images/@item.HinhAnh" alt="" width=60 height=60 /></td>
                                    <td>@item.TieuDe</td>
                                    <td>@item.Thoigian</td>
                                    <td>@item.TomTat</td>
                                    <td>@item.NoiDung</td>
                                   
                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <a href="/Admin/User/Create">Tạo mới tài khoản</a>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
