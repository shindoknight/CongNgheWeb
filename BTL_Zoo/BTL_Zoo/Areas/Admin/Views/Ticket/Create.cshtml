@model BTL_Zoo.Entities.Ve

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter
{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault()
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImages').val(url);
            };
            finder.popup();
        })
        var editor = CKEDITOR.replace('txtContent', {
            customConfig: '/Content/Admin/js/plugins/ckeditor/config.js',
        });
    </script>
}
<h2>Thêm vé mới</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thông tin vé</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Tên vé</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenVe)
                @Html.ValidationMessageFor(model => model.TenVe)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Hình ảnh</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AnhVe, new { id = "txtImages" })
                <a href="#" id="btnSelectImage">Chọn ảnh</a>
                @Html.ValidationMessageFor(model => model.AnhVe, "", new { @class = "text-danger" })
                </div>
               
            </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tóm tắt</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TomTatVe)
                @Html.ValidationMessageFor(model => model.TomTatVe)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Thông tin chi tiết</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ThongTinCTVe, new { htmlAttributes = new { @class = "form-control" }, id = "txtContent" })
                @Html.ValidationMessageFor(model => model.ThongTinCTVe, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Giá tiền mới cho trẻ em </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaMoiTreEm)
                @Html.ValidationMessageFor(model => model.GiaMoiTreEm)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giá tiền mới cho người lớn </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaMoiNguoiLon)
                @Html.ValidationMessageFor(model => model.GiaMoiNguoiLon)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giá tiền cũ cho trẻ em </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaCuTreEm)
                @Html.ValidationMessageFor(model => model.GiaCuTreEm)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giá tiền cũ cho người lớn </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaCuNguoiLon)
                @Html.ValidationMessageFor(model => model.GiaCuNguoiLon)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">số lượng vé </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SLVe)
                @Html.ValidationMessageFor(model => model.SLVe)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
