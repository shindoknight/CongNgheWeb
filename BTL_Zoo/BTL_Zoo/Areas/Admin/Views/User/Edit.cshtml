@model BTL_Zoo.Entities.Login

@{
    ViewBag.Title = "Sửa thông tin tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sửa tài khoản đăng nhập</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin tài khoản
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="~/Admin/User/EditAction" method="post">
                            <div class="panel-heading">
                                Thông tin đăng nhập
                            </div>
                           
                            <div class="form-group">
                                <label>Tên đăng nhập</label>
                                <input class="form-control" name="user" type="text" value="@Model.UserName" >
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input class="form-control" name="pass" type="password" value="@Model.PassWord">
                            </div>
                            <div class="form-group">
                                <label>Xác nhận mật khẩu</label>
                                <input class="form-control" name="xpass" type="password" value="@Model.PassWord">
                            </div>
                            <div class="form-group">
                                <p><label>Phân Quyền</label></p>
                                <label>Admin</label>
                                @switch (Model.Group)
                                {
                                    case 1:
                                        <input type="radio" checked name="group" value="1">
                                        <label>Nhân viên</label>
                                        <input type="radio" name="group" value="2" />
                                        <label>Khách hàng</label>
                                        <input type="radio" name="group" value="3" />
                                        break;
                                    case 2:
                                    <input type="radio" name="group" value="1">
                                    <label>Nhân viên</label>
                                    <input type="radio" checked name="group" value="2" />
                                    <label>Khách hàng</label>
                                    <input type="radio" name="group" value="3" />
                                        break;
                                    default:
                                    <input type="radio" name="group" value="1">
                                    <label>Nhân viên</label>
                                    <input type="radio" name="group" value="2" />
                                    <label>Khách hàng</label>
                                    <input type="radio" checked name="group" value="3" />
                                        break;
                                }

                            </div>
                            <div class="panel-heading">
                                Thông tin tài khoản
                            </div>
                            <div class="form-group">
                                <label>Họ và tên</label>
                                <input class="form-control" name="hoten" type="text" value="@Model.KhachHang.HoTen">
                            </div>
                            <div class="form-group">
                                <label>Ngày sinh</label>
                                <input class="form-control" name="ngaysinh" type="text" value="@Model.KhachHang.NgaySinh">
                            </div>
                            <div class="form-group">
                                <label>CMND</label>
                                <input class="form-control" name="CMND" type="text" value="@Model.KhachHang.CMND">
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <input class="form-control" name="diachi" type="text" value="@Model.KhachHang.DiaChi">
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control" name="email" type="text" value="@Model.KhachHang.Email">
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input class="form-control" name="sdt" type="text" value="@Model.KhachHang.SDT">
                            </div>
                            <button type="submit" class="btn btn-default">Lưu lại</button>
                            <button type="reset" class="btn btn-default">Nhập lại</button>
                        </form>

                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
