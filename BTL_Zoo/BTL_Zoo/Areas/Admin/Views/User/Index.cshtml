@model PagedList.IPagedList<BTL_Zoo.Entities.Login>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách tài khoản</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách tài khoản
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên Tài khoản</th>
                                <th>Mật khẩu</th>
                                <th>Phân quyền</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                <td>@item.UserName</td>
                                <td>@item.PassWord</td>
                                @{
                                    var pq="";
                                    switch (item.Group)
                                    {
                                        case 1: pq = "Admin"; break;
                                        case 2: pq = "Nhân viên"; break;
                                        case 3: pq = "Khách hàng"; break;
                                           
                                    }
                                }
                                <td>@pq</td>
                                <td><a href="/Admin/User/Edit/@item.UserName">Sửa||</a><a href="/Admin/User/Delete/@item.UserName">Xóa   </a></td>
                            </tr>
                            }
                            
                           
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
