@model IEnumerable<BTL_Zoo.Entities.SuKien>

@{
    ViewBag.Title = "Index";
}

<div id="content">
    <div id="events">
        <h1>Sự kiện</h1>
        <ul>
            @foreach (var item in Model)
            {
                
                //var tt = @item.TieuDe
                    
                <li>
                    <div><a href="~/Event/Detail/@item.IDEvent"><img src="@item.HinhAnh" /></a></div>
                    <h4>@Html.ActionLink( item.TieuDe, "Detail", new { id = item.IDEvent })</h4>
                     <p> @Html.DisplayFor(modelItem => item.Thoigian)</p>
                  
                       <p>@Html.Raw(item.NoiDung)</p>
                    
                </li>
            }
           
        </ul>
     </div>
</div>
